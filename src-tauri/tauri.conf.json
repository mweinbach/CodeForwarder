{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "VibeProxy",
  "version": "0.1.0",
  "identifier": "com.automaze.vibeproxy",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run sync:cli-proxy-binary && bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "VibeProxy",
        "width": 800,
        "height": 600,
        "resizable": true,
        "decorations": false,
        "center": true,
        "label": "main",
        "visible": true,
        "closable": true,
        "minimizable": true,
        "maximizable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ]
  }
}
